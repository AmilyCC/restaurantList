    <!-- search bar -->
    <div class="container search-bar">
        <div class="search-bar-outer">
            <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keywords}}" aria-describedby="search-button">
                <div class="input-group-append">
                    <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                </div>
                </div>
            </form>
            </div>
        </div>
    </div>
    <!-- restaurant list -->
    <div class="container mt-5">
        <div class="my-3 d-flex flex-row justify-content-end">
            <form action="./sortby" method="GET" id="sortby">
                <select onchange="this.form.submit()" class="form-select" name="sort" form="sortby">
                    <option value="name" {{#if sort1}} selected {{/if}}>餐廳名稱A → Z</option>
                    <option value="nameDesc" {{#if sort2}} selected {{/if}}>餐廳名稱Z → A</option>
                    <option value="rateDesc" {{#if sort3}} selected {{/if}}>評分高到低</option>
                    <option value="rate" {{#if sort4}} selected {{/if}}>評分低到高</option>
                    <option value="cate" {{#if sort5}} selected {{/if}}>類別</option>
                    <option value="area" {{#if sort6}} selected {{/if}}>區域</option>
                </select>
            </form>
        </div>
        

        <div class="row d-flex flex-row justify-content-start">
            {{#each rests}}   
            <div class=" col-4">
                <div class="card-columns">
                    <div class="text-secondary">
                        <div class="card mb-3">
                            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                            <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>

                            <span class="badge rounded-pill bg-danger font-weight-normal">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>

                            </div>
                        
                            <div class="card-footer d-flex justify-content-end flex-wrap">
                                <a a href="/restaurants/{{this._id}}">
                                    <button type="button" class="btn btn-outline-secondary btn-sm mx-1">
                                        More
                                    </button>
                                </a>
                                <a href="/restaurants/{{this._id}}/edit">
                                    <button class="btn btn-outline-secondary btn-sm mx-1">
                                        Edit
                                    </button>
                                </a>
                                <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm text-white ms-1">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}  
        </div>
    </div>
</div>